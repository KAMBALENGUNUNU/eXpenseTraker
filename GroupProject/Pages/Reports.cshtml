@page "/Reports"
@model Project.Pages.ReportsModel
@{
    ViewData["Title"] = "Reports - eXpense Tracker";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2e8b57;
            --secondary: #f8f9fa;
            --danger: #dc3545;
            --success: #28a745;
            --warning: #ffc107;
            --info: #17a2b8;
            --pink: #ff69b4;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }

        .sidebar {
            width: 220px;
            background-color: white;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            border-right: 1px solid #e0e0e0;
            z-index: 1000;
        }

        .main-content {
            margin-left: 220px;
            padding: 20px;
            background-color: #f5f5f5;
        }

        .logo {
            padding: 20px;
            border-bottom: 1px solid #e0e0e0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .logo img {
                max-width: 100%;
                max-height: 40px;
                object-fit: contain;
            }

        .menu-item {
            padding: 15px 20px;
            color: #333;
            display: flex;
            align-items: center;
            text-decoration: none;
            transition: all 0.3s;
            border-radius: 8px;
            margin: 5px 10px;
        }

            .menu-item:hover, .menu-item.active {
                background-color: #f0f0f0;
                color: var(--primary);
            }

            .menu-item i {
                margin-right: 10px;
                width: 20px;
                text-align: center;
            }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .user-profile {
            display: flex;
            align-items: center;
        }

            .user-profile img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-right: 10px;
            }

        .search-bar {
            display: flex;
            align-items: center;
            background-color: white;
            border-radius: 20px;
            padding: 5px 15px;
            width: 300px;
        }

            .search-bar input {
                border: none;
                background: none;
                outline: none;
                width: 100%;
                padding: 5px;
            }

            .search-bar i {
                color: #999;
                margin-right: 10px;
            }

        .status-indicator {
            display: inline-block;
            width: 10px;
            height: 10px;
            background-color: var(--success);
            border-radius: 50%;
            margin-right: 5px;
        }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            margin-bottom: 20px;
            border: none;
            background-color: white;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
        }

            .table th, .table td {
                padding: 10px;
                text-align: left;
                border-bottom: 1px solid #e0e0e0;
            }

            .table th {
                background-color: #f8f9fa;
                font-weight: 600;
            }

        .category-tag {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 15px;
            background-color: #e0e0e0;
            font-size: 0.85rem;
        }

        .status-lowest {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 15px;
            background-color: #ffe6e6;
            color: #dc3545;
            font-size: 0.85rem;
        }

        .status-highest {
            display: inline-block;
            padding: 5px 10px;
            border-radius: 15px;
            background-color: #e6ffe6;
            color: #28a745;
            font-size: 0.85rem;
        }

        .export-btn {
            background-color: var(--primary);
            color: white;
            border: none;
            padding: 8px 15px;
            border-radius: 5px;
            cursor: pointer;
            display: flex;
            align-items: center;
        }

            .export-btn i {
                margin-right: 5px;
            }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <img src="/Images/logo.png" alt="eXpense Tracker Logo">
        </div>
        <div class="menu">
            <a href="/Dashboard" class="menu-item">
                <i class="fas fa-th-large"></i> Dashboard
            </a>
            <a href="/Transactions" class="menu-item">
                <i class="fas fa-exchange-alt"></i> Transactions
            </a>
            <a href="/Budget" class="menu-item">
                <i class="fas fa-chart-pie"></i> Budget
            </a>
            <a href="/Reports" class="menu-item active">
                <i class="fas fa-chart-bar"></i> Reports
            </a>
            <a href="/Settings" class="menu-item">
                <i class="fas fa-cog"></i> Settings
            </a>
            <a href="/Logout" class="menu-item">
                <i class="fas fa-sign-out-alt"></i> Log Out
            </a>
        </div>
    </div>

    <div class="main-content">
        <div class="header">
            <h4>Reports</h4>
            <div class="d-flex align-items-center">
                <div class="search-bar me-4">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Type a keyword to search..." asp-for="SearchTerm">
                </div>
                <div class="user-profile">
                    <i class="fas fa-bell me-3"></i>
                    <img src="@Model.UserProfileImage" alt="Profile">
                    <div class="ms-2">
                        <div>@Model.UserName</div>
                        <div><span class="status-indicator"></span>Online</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="card p-3">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <form method="get" class="d-flex align-items-center">
                    <div class="search-bar me-3">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Search transactions" asp-for="SearchTerm" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
                <form method="post" asp-page-handler="ExportToCsv">
                    <button type="submit" class="export-btn">
                        <i class="fas fa-download"></i> Export to CSV
                    </button>
                </form>
            </div>

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    @Model.ErrorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success" role="alert">
                    @Model.SuccessMessage
                </div>
            }

            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Category</th>
                        <th>Code</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Added</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Transactions != null && Model.Transactions.Any())
                    {
                        for (int i = 0; i < Model.Transactions.Count; i++)
                        {
                            var transaction = Model.Transactions[i];
                            <tr>
                                <td>@(i + 1)</td>
                                <td><span class="category-tag">@transaction.Category</span></td>
                                <td>@transaction.Code</td>
                                <td>$@transaction.Price.ToString("N2")</td>
                                <td>
                                    @if (transaction.Status == "Lowest")
                                    {
                                        <span class="status-lowest">@transaction.Status</span>
                                    }
                                    else if (transaction.Status == "Highest")
                                    {
                                        <span class="status-highest">@transaction.Status</span>
                                    }
                                    else
                                    {
                                        <span>@transaction.Status</span>
                                    }
                                </td>
                                <td>@transaction.AddedDate.ToString("dd MMM yyyy")</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">No transactions found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>