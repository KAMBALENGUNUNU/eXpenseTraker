@page
@model Project.Pages.TransactionsModel
@{
    ViewData["Title"] = "Transactions | eXpense Tracker";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #2e8b57;
            --secondary: #f8f9fa;
            --danger: #dc3545;
            --success: #28a745;
            --warning: #ffc107;
            --info: #17a2b8;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f5f5f5;
        }

        .sidebar {
            width: 250px;
            background-color: white;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            border-right: 1px solid #e0e0e0;
        }

        .main-content {
            margin-left: 250px;
            padding: 20px;
        }

        .logo {
            padding: 20px;
            color: var(--primary);
            font-weight: bold;
            font-size: 1.5rem;
            border-bottom: 1px solid #e0e0e0;
            display: flex;
            align-items: center;
        }

        .menu-item {
            padding: 15px 20px;
            color: #333;
            display: flex;
            align-items: center;
            text-decoration: none;
            transition: all 0.3s;
        }

            .menu-item:hover, .menu-item.active {
                background-color: #f0f0f0;
                color: var(--primary);
            }

            .menu-item i {
                margin-right: 10px;
                width: 20px;
                text-align: center;
            }

        .card {
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
            border: none;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .user-profile {
            display: flex;
            align-items: center;
        }

            .user-profile img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-right: 10px;
            }

        .btn-success {
            background-color: var(--primary);
            border-color: var(--primary);
        }

            .btn-success:hover {
                background-color: #267347;
                border-color: #267347;
            }

        .tab-buttons {
            display: flex;
            border-bottom: 1px solid #e0e0e0;
            margin-bottom: 15px;
        }

        .tab-button {
            padding: 8px 15px;
            margin-right: 5px;
            border: none;
            background: none;
            font-size: 14px;
            color: #666;
            cursor: pointer;
            position: relative;
        }

            .tab-button.active {
                color: var(--primary);
                font-weight: 600;
            }

                .tab-button.active:after {
                    content: '';
                    position: absolute;
                    bottom: -1px;
                    left: 0;
                    width: 100%;
                    height: 2px;
                    background-color: var(--primary);
                }

        .transactions-table {
            width: 100%;
            border-collapse: collapse;
        }

            .transactions-table th {
                text-align: left;
                padding: 12px 15px;
                font-size: 12px;
                color: #666;
                border-bottom: 1px solid #e0e0e0;
            }

            .transactions-table td {
                padding: 12px 15px;
                vertical-align: middle;
                border-bottom: 1px solid #e0e0e0;
            }

        .status-badge {
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
            font-weight: 500;
        }

            .status-badge.lowest {
                background-color: rgba(220, 53, 69, 0.1);
                color: var(--danger);
            }

            .status-badge.highest {
                background-color: rgba(40, 167, 69, 0.1);
                color: var(--success);
            }

            .status-badge.average {
                background-color: rgba(23, 162, 184, 0.1);
                color: var(--info);
            }

        .category-badge {
            padding: 4px 8px;
            border-radius: 4px;
            font-size: 12px;
            background-color: rgba(46, 139, 87, 0.1);
            color: var(--primary);
            display: inline-block;
        }

        .action-buttons a {
            color: #666;
            margin-right: 8px;
            font-size: 14px;
        }

            .action-buttons a:hover {
                color: var(--primary);
            }

        .search-container {
            position: relative;
            width: 300px;
        }

            .search-container input {
                padding-left: 35px;
                border-radius: 20px;
                border: 1px solid #e0e0e0;
                font-size: 14px;
            }

            .search-container i {
                position: absolute;
                left: 12px;
                top: 10px;
                color: #999;
            }

        .pagination {
            margin-top: 20px;
            justify-content: center;
        }

            .pagination .page-item .page-link {
                border: none;
                color: #666;
                margin: 0 2px;
                border-radius: 4px;
            }

                .pagination .page-item .page-link:hover {
                    background-color: #f0f0f0;
                }

            .pagination .page-item.active .page-link {
                background-color: var(--primary);
                color: white;
            }

        .online-badge {
            background-color: var(--success);
            color: white;
            padding: 2px 8px;
            border-radius: 10px;
            font-size: 11px;
            margin-left: 5px;
        }

        .filters-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .date-select, .filters-button {
            padding: 6px 12px;
            border: 1px solid #e0e0e0;
            border-radius: 4px;
            background-color: white;
            font-size: 14px;
            display: flex;
            align-items: center;
        }

            .date-select i, .filters-button i {
                margin-right: 5px;
            }

                .filters-button i:last-child {
                    margin-left: 5px;
                    margin-right: 0;
                }

        .alert {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            <i class="fas fa-wallet me-2"></i>eXpense Tracker
        </div>
        <div class="menu">
            <a href="/Dashboard" class="menu-item">
                <i class="fas fa-chart-line"></i> Dashboard
            </a>
            <a href="/Transactions" class="menu-item active">
                <i class="fas fa-exchange-alt"></i> Transactions
            </a>
            <a href="/Budget" class="menu-item">
                <i class="fas fa-chart-pie"></i> Budget
            </a>
            <a href="/Reports" class="menu-item">
                <i class="fas fa-file-alt"></i> Reports
            </a>
            <a href="/Settings" class="menu-item">
                <i class="fas fa-cog"></i> Settings
            </a>
            <a href="/Logout" class="menu-item">
                <i class="fas fa-sign-out-alt"></i> Log Out
            </a>
        </div>
    </div>

    <div class="main-content">
        <div class="header">
            <h4>Transactions</h4>
            <div class="user-profile">
                <div class="search-container me-4">
                    <i class="fas fa-search"></i>
                    <form method="get">
                        <input type="text" name="SearchTerm" class="form-control" placeholder="Type a keyword to search..." value="@Model.SearchTerm">
                    </form>
                </div>
                <i class="fas fa-bell me-3"></i>
                <img src="@Model.UserProfileImage" alt="Profile">
                <div>
                    <span>@Model.UserName</span>
                    <span class="online-badge">Online</span>
                </div>
                <i class="fas fa-chevron-down ms-2"></i>
            </div>
        </div>

        <div class="card p-4">
            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger">@Model.ErrorMessage</div>
            }
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success">@Model.SuccessMessage</div>
            }

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <a href="#" class="btn btn-outline-success me-2">
                        <i class="fas fa-file-export"></i> Export
                    </a>
                </div>
                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addExpenseModal">
                    <i class="fas fa-plus"></i> Add Expense
                </button>
            </div>

            <div class="tab-buttons">
                <a class="tab-button @(Model.FilterStatus == "All Expenses" || string.IsNullOrEmpty(Model.FilterStatus) ? "active" : "")" href="?FilterStatus=All Expenses">All Expenses</a>
                <a class="tab-button @(Model.FilterStatus == "Highest" ? "active" : "")" href="?FilterStatus=Highest">Highest</a>
                <a class="tab-button @(Model.FilterStatus == "Lowest" ? "active" : "")" href="?FilterStatus=Lowest">Lowest</a>
                <a class="tab-button @(Model.FilterStatus == "Average" ? "active" : "")" href="?FilterStatus=Average">Average</a>
            </div>

            <div class="filters-row">
                <div class="search-container">
                    <i class="fas fa-search"></i>
                    <form method="get">
                        <input type="text" name="SearchTerm" class="form-control" placeholder="Search product..." value="@Model.SearchTerm">
                    </form>
                </div>
                <div class="d-flex">
                    <form method="get" class="me-2">
                        <div class="date-select">
                            <i class="far fa-calendar"></i>
                            <input type="date" name="FilterDate" class="border-0" value="@(Model.FilterDate.HasValue ? Model.FilterDate.Value.ToString("yyyy-MM-dd") : "")" onchange="this.form.submit()">
                        </div>
                    </form>
                    <button class="filters-button">
                        <i class="fas fa-filter"></i> Filters <i class="fas fa-chevron-down"></i>
                    </button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="transactions-table">
                    <thead>
                        <tr>
                            <th width="40px"></th>
                            <th width="40px">#</th>
                            <th>Category</th>
                            <th>Code</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Added</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var transaction in Model.Transactions)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" class="form-check-input">
                                </td>
                                <td>@transaction.Id</td>
                                <td>
                                    <span class="category-badge">@transaction.Category</span>
                                </td>
                                <td>@transaction.Code</td>
                                <td>$@transaction.Price.ToString("N2")</td>
                                <td>
                                    <span class="status-badge @transaction.Status.ToLower()">@transaction.Status</span>
                                </td>
                                <td>@transaction.AddedDate.ToString("dd MMM yyyy")</td>
                                <td class="action-buttons">
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#viewTransactionModal_@transaction.Id"><i class="fas fa-eye"></i></a>
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#editTransactionModal_@transaction.Id"><i class="fas fa-edit"></i></a>
                                    <form method="post" asp-page-handler="Delete" style="display:inline;">
                                        <input type="hidden" name="id" value="@transaction.Id" />
                                        <button type="submit" class="btn btn-link p-0" onclick="return confirm('Are you sure you want to delete this transaction?');">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>

                            <!-- View Transaction Modal -->
                            <div class="modal fade" id="viewTransactionModal_@transaction.Id" tabindex="-1" aria-labelledby="viewTransactionModalLabel_@transaction.Id" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="viewTransactionModalLabel_@transaction.Id">Transaction Details</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <p><strong>ID:</strong> @transaction.Id</p>
                                            <p><strong>Category:</strong> @transaction.Category</p>
                                            <p><strong>Code:</strong> @transaction.Code</p>
                                            <p><strong>Price:</strong> $@transaction.Price.ToString("N2")</p>
                                            <p><strong>Status:</strong> @transaction.Status</p>
                                            <p><strong>Added Date:</strong> @transaction.AddedDate.ToString("dd MMM yyyy")</p>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Edit Transaction Modal -->
                            <div class="modal fade" id="editTransactionModal_@transaction.Id" tabindex="-1" aria-labelledby="editTransactionModalLabel_@transaction.Id" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="editTransactionModalLabel_@transaction.Id">Edit Transaction</h5>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <form asp-page-handler="Edit" method="post">
                                            <div class="modal-body">
                                                <input type="hidden" asp-for="EditTransaction.Id" value="@transaction.Id" />
                                                <div class="mb-3">
                                                    <label asp-for="EditTransaction.Category" class="form-label">Category</label>
                                                    <input asp-for="EditTransaction.Category" class="form-control" value="@transaction.Category" required />
                                                </div>
                                                <div class="mb-3">
                                                    <label asp-for="EditTransaction.Code" class="form-label">Code</label>
                                                    <input asp-for="EditTransaction.Code" class="form-control" value="@transaction.Code" required />
                                                </div>
                                                <div class="mb-3">
                                                    <label asp-for="EditTransaction.Price" class="form-label">Price</label>
                                                    <input asp-for="EditTransaction.Price" class="form-control" type="number" step="0.01" value="@transaction.Price" required />
                                                </div>
                                                <div class="mb-3">
                                                    <label asp-for="EditTransaction.Status" class="form-label">Status</label>
                                                    <select asp-for="EditTransaction.Status" class="form-select" required>
                                                        <option value="Lowest" selected="@(transaction.Status == "Lowest")">Lowest</option>
                                                        <option value="Average" selected="@(transaction.Status == "Average")">Average</option>
                                                        <option value="Highest" selected="@(transaction.Status == "Highest")">Highest</option>
                                                    </select>
                                                </div>
                                                <div class="mb-3">
                                                    <label asp-for="EditTransaction.AddedDate" class="form-label">Added Date</label>
                                                    <input asp-for="EditTransaction.AddedDate" class="form-control" type="date" value="@transaction.AddedDate.ToString("yyyy-MM-dd")" required />
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-success">Save Changes</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-3">
                <div>
                    <small class="text-muted">Showing @((Model.CurrentPage - 1) * Model.ItemsPerPage + 1)-@Math.Min(Model.CurrentPage * Model.ItemsPerPage, Model.TotalItems) from @Model.TotalItems</small>
                </div>
                <nav>
                    <ul class="pagination">
                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link" href="/Transactions?page=@(Model.CurrentPage - 1)&SearchTerm=@Model.SearchTerm&FilterStatus=@Model.FilterStatus@(Model.FilterDate.HasValue ? $"&FilterDate={Model.FilterDate.Value.ToString("yyyy-MM-dd")}" : "")" aria-label="Previous">
                                <span aria-hidden="true">«</span>
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                                <a class="page-link" href="/Transactions?page=@i&SearchTerm=@Model.SearchTerm&FilterStatus=@Model.FilterStatus@(Model.FilterDate.HasValue ? $"&FilterDate={Model.FilterDate.Value.ToString("yyyy-MM-dd")}" : "")">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="/Transactions?page=@(Model.CurrentPage + 1)&SearchTerm=@Model.SearchTerm&FilterStatus=@Model.FilterStatus@(Model.FilterDate.HasValue ? $"&FilterDate={Model.FilterDate.Value.ToString("yyyy-MM-dd")}" : "")" aria-label="Next">
                                <span aria-hidden="true">»</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <!-- Modal for Adding Expense -->
    <div class="modal fade" id="addExpenseModal" tabindex="-1" aria-labelledby="addExpenseModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addExpenseModalLabel">Add New Expense</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form asp-page-handler="AddExpense" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label asp-for="NewTransaction.Category" class="form-label">Category</label>
                            <input asp-for="NewTransaction.Category" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewTransaction.Code" class="form-label">Code</label>
                            <input asp-for="NewTransaction.Code" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewTransaction.Price" class="form-label">Price</label>
                            <input asp-for="NewTransaction.Price" class="form-control" type="number" step="0.01" required />
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewTransaction.Status" class="form-label">Status</label>
                            <select asp-for="NewTransaction.Status" class="form-select" required>
                                <option value="Lowest">Lowest</option>
                                <option value="Average">Average</option>
                                <option value="Highest">Highest</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NewTransaction.AddedDate" class="form-label">Added Date</label>
                            <input asp-for="NewTransaction.AddedDate" class="form-control" type="date" required />
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">Add Expense</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>