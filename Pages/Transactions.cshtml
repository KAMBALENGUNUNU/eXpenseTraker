@page "/Transactions"
@model ExpenseTracker.Pages.TransactionsModel
@{
    ViewData["Title"] = "Transactions";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>eXpense Tracker - Transactions</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Main Layout */
        .expense-tracker-container {
            display: flex;
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 220px;
            background-color: white;
            padding: 20px 0;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.05);
            display: flex;
            flex-direction: column;
        }

        .app-title {
            color: #2e8b57;
            font-size: 24px;
            font-weight: bold;
            padding: 0 20px 20px;
            margin-bottom: 20px;
            border-bottom: 1px solid #f0f0f0;
        }

        .nav-menu {
            display: flex;
            flex-direction: column;
            flex: 1;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 12px 20px;
            color: #555;
            text-decoration: none;
            margin: 4px 0;
            border-left: 3px solid transparent;
            transition: all 0.2s ease;
        }

            .nav-item i {
                margin-right: 12px;
                width: 20px;
                text-align: center;
            }

            .nav-item:hover {
                background-color: #f7f7f7;
                color: #2e8b57;
                border-left-color: #2e8b57;
            }

            .nav-item.active {
                background-color: #f0f7f4;
                color: #2e8b57;
                border-left-color: #2e8b57;
                font-weight: 500;
            }

        /* Main Content Area */
        .main-content {
            flex: 1;
            background-color: #f4f4f7;
            padding: 20px;
            display: flex;
            flex-direction: column;
        }

        /* Header Bar */
        .header-bar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }

            .header-bar h1 {
                font-size: 24px;
                color: #333;
                margin: 0;
            }

        .header-actions {
            display: flex;
            align-items: center;
        }

        .search-bar {
            position: relative;
            margin-right: 20px;
        }

            .search-bar input {
                padding: 8px 12px 8px 35px;
                border-radius: 20px;
                border: 1px solid #ddd;
                width: 250px;
                font-size: 14px;
            }

            .search-bar i {
                position: absolute;
                left: 12px;
                top: 50%;
                transform: translateY(-50%);
                color: #999;
            }

        .notifications {
            margin-right: 20px;
            font-size: 18px;
            color: #555;
        }

        .user-profile {
            display: flex;
            align-items: center;
            cursor: pointer;
        }

            .user-profile img {
                width: 35px;
                height: 35px;
                border-radius: 50%;
                object-fit: cover;
                margin-right: 10px;
            }

        .user-info {
            line-height: 1.2;
            margin-right: 5px;
        }

        .user-name {
            font-weight: 500;
            color: #333;
            margin: 0;
        }

        .online-status {
            font-size: 12px;
            color: #2e8b57;
        }

        /* Content Area */
        .content-card {
            background-color: white;
            border-radius: 8px;
            padding: 24px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        /* Action Buttons */
        .card-actions {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 20px;
            gap: 12px;
        }

        .btn {
            display: flex;
            align-items: center;
            gap: 6px;
            padding: 8px 16px;
            border-radius: 6px;
            font-weight: 500;
            cursor: pointer;
            font-size: 14px;
            border: none;
            transition: all 0.2s ease;
        }

        .btn-export {
            background-color: #e8f5e9;
            color: #2e8b57;
        }

            .btn-export:hover {
                background-color: #d8e5d9;
            }

        .btn-add {
            background-color: #2e8b57;
            color: white;
        }

            .btn-add:hover {
                background-color: #268051;
            }

        /* Filter Section */
        .filter-section {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .filter-tabs {
            display: flex;
            gap: 8px;
        }

        .filter-tab {
            padding: 8px 16px;
            border-radius: 20px;
            font-size: 14px;
            font-weight: 500;
            cursor: pointer;
            border: none;
            background-color: #f5f5f5;
            color: #555;
        }

            .filter-tab.active {
                background-color: #e8f5e9;
                color: #2e8b57;
            }

            .filter-tab.higher {
                background-color: #fff8e1;
                color: #ffa000;
            }

            .filter-tab.lower {
                background-color: #ffebee;
                color: #f44336;
            }

            .filter-tab.average {
                background-color: #f5f5f5;
                color: #757575;
            }

        .filter-controls {
            display: flex;
            gap: 8px;
        }

        .search-product {
            display: flex;
            align-items: center;
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            background-color: white;
        }

            .search-product input {
                border: none;
                outline: none;
                margin-left: 8px;
                font-size: 14px;
                width: 150px;
                color: #777;
            }

        .btn-control {
            display: flex;
            align-items: center;
            gap: 6px;
            padding: 8px 12px;
            border: 1px solid #ddd;
            border-radius: 6px;
            background-color: white;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.2s ease;
            color: #555;
        }

            .btn-control:hover {
                background-color: #f5f5f5;
            }

        /* Table Styles */
        .transactions-table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
            font-size: 14px;
        }

            .transactions-table th,
            .transactions-table td {
                padding: 12px 16px;
                text-align: left;
                border-bottom: 1px solid #eee;
            }

            .transactions-table th {
                color: #777;
                font-weight: 500;
                background-color: #fafafa;
            }

        .checkbox-cell {
            width: 40px;
        }

        .custom-checkbox {
            width: 18px;
            height: 18px;
            border: 2px solid #ddd;
            border-radius: 4px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .custom-checkbox.checked {
                background-color: #2e8b57;
                border-color: #2e8b57;
                color: white;
            }

        .id-column {
            color: #555;
            font-weight: 500;
        }

        /* Status Badges */
        .status-badge {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 500;
            display: inline-block;
        }

            .status-badge.lower {
                background-color: #ffebee;
                color: #f44336;
            }

            .status-badge.higher {
                background-color: #fff8e1;
                color: #ffa000;
            }

            .status-badge.average {
                background-color: #f5f5f5;
                color: #757575;
            }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 8px;
        }

        .btn-action {
            width: 28px;
            height: 28px;
            border-radius: 4px;
            border: none;
            background-color: #f5f5f5;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            color: #777;
            transition: all 0.2s ease;
        }

            .btn-action:hover {
                background-color: #e0e0e0;
            }

        /* Pagination */
        .pagination-container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 14px;
        }

        .pagination-info {
            color: #777;
        }

        .pagination-controls {
            display: flex;
            align-items: center;
            gap: 4px;
        }

        .pagination-btn {
            width: 28px;
            height: 28px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px solid #ddd;
            border-radius: 4px;
            background-color: white;
            cursor: pointer;
            transition: all 0.2s ease;
        }

            .pagination-btn:hover {
                background-color: #f5f5f5;
            }

            .pagination-btn.active {
                background-color: #2e8b57;
                color: white;
                border-color: #2e8b57;
            }
    </style>
</head>
