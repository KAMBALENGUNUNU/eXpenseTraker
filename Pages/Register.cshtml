@page
@model ExpenseTracker.Pages.RegisterModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up - eXpense Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" /> <!-- For icons -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
        }

        .page-container {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .image-section {
            flex: 1;
            background-image: url('/images/money-hand.jpg');
            background-size: cover;
            background-position: center;
        }

        .form-section {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #fff;
            padding: 20px; /* Reduced padding to make the form more compact */
            overflow-y: auto; /* Added to ensure scrolling if content overflows */
        }

        .form-container {
            width: 100%;
            max-width: 400px; /* Reduced width to make the form more compact */
        }

        .login-header {
            font-size: 22px; /* Reduced font size to fit better */
            font-weight: bold;
            color: #2e7d32; /* Green color to match the image */
            margin-bottom: 20px; /* Reduced spacing below the header */
        }

        .form-group {
            position: relative;
            margin-bottom: 15px; /* Reduced spacing between inputs */
        }

        .form-label {
            font-size: 14px; /* Reduced font size to match the image */
            margin-bottom: 5px; /* Reduced spacing below the label */
            display: block;
            color: #333;
        }

        .form-control {
            width: 100%;
            padding: 10px 10px 10px 35px; /* Reduced padding for a more compact input */
            border: 1px solid #ccc;
            border-radius: 6px; /* Slightly reduced border-radius */
            font-size: 14px; /* Reduced font size for placeholder text */
            height: 40px; /* Reduced input height */
        }

        .form-group i {
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
            font-size: 14px; /* Reduced icon size */
        }

        .login-button {
            width: 100%;
            padding: 10px; /* Reduced padding for a smaller button */
            background-color: #2e7d32; /* Green color to match the image */
            color: white;
            border: none;
            border-radius: 6px; /* Reduced border-radius */
            font-size: 14px; /* Reduced font size */
            cursor: pointer;
            margin-bottom: 15px; /* Reduced spacing below the button */
        }

            .login-button:hover {
                background-color: #1b5e20; /* Darker green on hover */
            }

        .form-footer {
            text-align: center;
            margin-bottom: 15px; /* Reduced spacing */
        }

            .form-footer p {
                margin: 0;
                font-size: 12px; /* Reduced font size for "Already have an account?" */
            }

            .form-footer a {
                color: #2e7d32; /* Green color for the link */
                text-decoration: none;
            }

                .form-footer a:hover {
                    text-decoration: underline;
                }

        .google-button {
            width: 100%;
            padding: 10px; /* Reduced padding for a smaller button */
            background-color: #fff;
            color: #000;
            border: 1px solid #ccc;
            border-radius: 6px; /* Reduced border-radius */
            font-size: 14px; /* Reduced font size */
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px; /* Reduced gap between icon and text */
            cursor: pointer;
        }

            .google-button img {
                width: 18px; /* Reduced Google icon size */
                height: 18px;
            }
    </style>
</head>
<body>
    <div class="page-container">
        <div class="image-section"></div>
        <div class="form-section">
            <div class="form-container">
                <h2 class="login-header">Sign Up to eXpense Tracker</h2>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="form-group">
                        <label asp-for="Input.Name" class="form-label">Names</label>
                        <i class="fas fa-user"></i> <!-- Icon for Names -->
                        <input asp-for="Input.Name" class="form-control" autocomplete="name" aria-required="true" placeholder="Enter your names" />
                        <span asp-validation-for="Input.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <i class="fas fa-envelope"></i> <!-- Icon for Email -->
                        <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="Enter your email" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber" class="form-label">Phone</label>
                        <i class="fas fa-phone"></i> <!-- Icon for Phone -->
                        <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="tel" aria-required="true" placeholder="Enter your phone number" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password" class="form-label">Password</label>
                        <i class="fas fa-lock"></i> <!-- Icon for Password -->
                        <input asp-for="Input.Password" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Enter password" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                        <i class="fas fa-lock"></i> <!-- Icon for Confirm Password -->
                        <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Enter password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="login-button">Create account</button>
                </form>
                <div class="form-footer">
                    <p>Already have an account? <a asp-page="./Login">Login</a></p>
                </div>
                <button class="google-button">
                    <img src="https://www.google.com/favicon.ico" alt="Google logo" />
                    Continue with Google
                </button>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>