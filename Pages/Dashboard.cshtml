@page
@model DashboardModel
@{
    ViewData["Title"] = "Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>eXpense Tracker</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <style>
        /* General Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: #f5f5f5;
        }

        .dashboard-container {
            display: flex;
            height: 100vh;
        }

        /* Colors */
        .green-text {
            color: #4CAF50;
        }

        .red-text {
            color: #FF5252;
        }

        .blue-text {
            color: #2196F3;
        }

        .pink-text {
            color: #FF69B4;
        }

        /* Sidebar Styles */
        .sidebar {
            width: 220px;
            background-color: white;
            padding: 20px 0;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.05);
            display: flex;
            flex-direction: column;
        }

        .app-title {
            color: #2e8b57;
            font-size: 24px;
            font-weight: bold;
            padding: 0 20px 20px;
            margin-bottom: 20px;
            border-bottom: 1px solid #f0f0f0;
        }

        .nav-menu {
            display: flex;
            flex-direction: column;
            flex: 1;
        }

        .nav-item {
            display: flex;
            align-items: center;
            padding: 12px 20px;
            color: #555;
            text-decoration: none;
            margin: 4px 0;
            border-left: 3px solid transparent;
            transition: all 0.2s ease;
        }

            .nav-item i {
                margin-right: 12px;
                width: 20px;
                text-align: center;
            }

            .nav-item:hover {
                background-color: #f7f7f7;
                color: #2e8b57;
                border-left-color: #2e8b57;
            }

            .nav-item.active {
                background-color: #f0f7f4;
                color: #2e8b57;
                border-left-color: #2e8b57;
                font-weight: 500;
            }

        .logo {
            padding: 10px 0 30px;
        }

        .menu {
            display: flex;
            flex-direction: column;
        }

        .menu-item {
            padding: 12px 15px;
            margin: 5px 0;
            border-radius: 5px;
            color: #555;
            text-decoration: none;
            display: flex;
            align-items: center;
            transition: all 0.3s;
        }

            .menu-item:hover {
                background-color: #f5f5f5;
            }

            .menu-item.active {
                background-color: #f0f0f0;
                font-weight: 600;
            }

            .menu-item i {
                margin-right: 10px;
                width: 20px;
                text-align: center;
            }

            .menu-item.logout {
                margin-top: auto;
                color: #FF5252;
            }

        /* Main Content */
        .main-content {
            flex: 1;
            padding: 20px;
            overflow-y: auto;
        }

        /* Header */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .header-right {
            display: flex;
            align-items: center;
        }

        .search-box {
            position: relative;
            margin-right: 20px;
        }

            .search-box input {
                padding: 8px 15px 8px 35px;
                border: 1px solid #ddd;
                border-radius: 20px;
                width: 250px;
            }

            .search-box i {
                position: absolute;
                left: 12px;
                top: 50%;
                transform: translateY(-50%);
                color: #aaa;
            }

        .notifications {
            margin-right: 20px;
            position: relative;
            cursor: pointer;
        }

        .user-profile {
            display: flex;
            align-items: center;
            cursor: pointer;
        }

            .user-profile img {
                width: 40px;
                height: 40px;
                border-radius: 50%;
                margin-right: 10px;
            }

        .user-info h4 {
            font-size: 14px;
            margin: 0;
        }

        .status {
            font-size: 12px;
            display: flex;
            align-items: center;
        }

            .status.online {
                color: #4CAF50;
            }

        /* Summary Cards */
        .summary-cards {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 20px;
            margin-bottom: 20px;
        }

        .card {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .card-title {
            color: #777;
            margin-bottom: 10px;
        }

        .card-value {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .card-growth {
            font-size: 12px;
            color: #777;
        }

        /* Middle Section */
        .middle-section {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            margin-bottom: 20px;
        }

        .middle-card {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        /* Transaction List */
        .transaction-list {
            margin-top: 15px;
        }

        .transaction-item {
            display: flex;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #f0f0f0;
        }

        .transaction-icon {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 10px;
            color: white;
        }

            .transaction-icon.green {
                background-color: #4CAF50;
            }

            .transaction-icon.red {
                background-color: #FF5252;
            }

            .transaction-icon.orange {
                background-color: #FFA500;
            }

        .transaction-details {
            flex: 1;
        }

        .transaction-name {
            font-weight: 600;
        }

        .transaction-date {
            font-size: 12px;
            color: #777;
        }

        .transaction-amount {
            font-weight: 600;
        }

        /* Savings Section */
        .savings-amount {
            font-size: 32px;
            font-weight: bold;
            margin: 10px 0;
        }

        .time-period-selector {
            display: flex;
            margin-bottom: 15px;
        }

            .time-period-selector span {
                padding: 5px 15px;
                font-size: 12px;
                cursor: pointer;
                border-radius: 15px;
            }

                .time-period-selector span.active {
                    background-color: #f0f0f0;
                    font-weight: 600;
                }

        .savings-chart {
            height: 150px;
        }

        /* Attendance Section */
        .attendance-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

            .attendance-header select {
                padding: 5px 10px;
                border: 1px solid #ddd;
                border-radius: 5px;
                font-size: 12px;
            }

        .attendance-chart {
            position: relative;
            height: 200px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .attendance-center {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            text-align: center;
        }

            .attendance-center h2 {
                font-size: 24px;
                margin: 0;
            }

            .attendance-center p {
                font-size: 12px;
                color: #777;
                margin: 0;
            }

        .status-list {
            margin-top: 20px;
        }

        .status-item {
            display: flex;
            justify-content: space-between;
            margin: 8px 0;
        }

        .status-label {
            display: flex;
            align-items: center;
        }

            .status-label:before {
                content: "";
                display: inline-block;
                width: 10px;
                height: 10px;
                border-radius: 50%;
                background-color: #6B7280;
                margin-right: 8px;
            }

            .status-label.yellow:before {
                background-color: #FFD700;
            }

            .status-label.purple:before {
                background-color: #9333EA;
            }

            .status-label.green:before {
                background-color: #4CAF50;
            }

        .view-details-btn {
            width: 100%;
            padding: 10px;
            background-color: #6B7280;
            color: white;
            border: none;
            border-radius: 5px;
            margin-top: 15px;
            cursor: pointer;
        }

        /* Bottom Section */
        .bottom-section {
            background-color: white;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        }

        .bottom-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 20px;
        }

        .tabs {
            display: flex;
        }

        .tab {
            margin-right: 20px;
            padding-bottom: 5px;
            cursor: pointer;
        }

            .tab.active {
                border-bottom: 2px solid #4CAF50;
                font-weight: 600;
            }

        .period-selector {
            font-size: 14px;
            color: #777;
            cursor: pointer;
        }

        .bar-chart-container {
            height: 200px;
        }
    </style>
</head>
<body>
    <div class="dashboard-container">
        <!-- Left Sidebar -->
        <div class="sidebar">
            <div class="logo">
                <h2 class="app-title green-text">eXpense Tracker</h2>
            </div>
            <div class="menu nav-menu">
                <a asp-page="/Dashboard" class="menu-item nav-item active">
                    <i class="fas fa-th-large"></i>
                    Dashboard
                </a>
                <a asp-page="/Transactions" class="menu-item nav-item">
                    <i class="fas fa-exchange-alt"></i>
                    Transactions
                </a>
                <a asp-page="/Budget" class="menu-item nav-item">
                    <i class="fas fa-wallet"></i>
                    Budget
                </a>
                <a asp-page="/Reports" class="menu-item nav-item">
                    <i class="fas fa-chart-bar"></i>
                    Reports
                </a>
                <a asp-page="/Settings" class="menu-item nav-item">
                    <i class="fas fa-cog"></i>
                    Settings
                </a>
                <a asp-page="/Index" class="menu-item nav-item logout">
                    <i class="fas fa-sign-out-alt"></i>
                    Log Out
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Header -->
            <div class="header">
                <h2>Dashboard</h2>
                <div class="header-right">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" placeholder="Type a command or search...">
                    </div>
                    <div class="notifications">
                        <i class="fas fa-bell"></i>
                    </div>
                    <div class="user-profile">
                        <img src="~/images/default_profile.jpg" alt="User Profile">
                        <div class="user-info">
                            <h4>Prisca Nova</h4>
                            <span class="status online">● Online</span>
                        </div>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
            </div>

            <!-- Summary Cards -->
            <div class="summary-cards">
                <div class="card">
                    <div class="card-title">Monthly Income</div>
                    <div class="card-value green-text">$3,245.00</div>
                    <div class="card-growth">+5% from last month</div>
                </div>
                <div class="card">
                    <div class="card-title">Monthly Expenses</div>
                    <div class="card-value red-text">$2,246.00</div>
                    <div class="card-growth">+5% from last month</div>
                </div>
                <div class="card">
                    <div class="card-title">Current Balance</div>
                    <div class="card-value blue-text">$3,30.00</div>
                    <div class="card-growth">+5% from last month</div>
                </div>
                <div class="card">
                    <div class="card-title">Saving Goals</div>
                    <div class="card-value pink-text">$550.00</div>
                    <div class="card-growth">+5% from last month</div>
                </div>
            </div>

            <!-- Middle Section -->
            <div class="middle-section">
                <!-- Recent Transactions -->
                <div class="middle-card">
                    <h3>Recent Transactions</h3>
                    <div class="transaction-list">
                        <div class="transaction-item">
                            <div class="transaction-icon green">
                                <i class="fas fa-home"></i>
                            </div>
                            <div class="transaction-details">
                                <div class="transaction-name">Rent</div>
                                <div class="transaction-date">September 14th</div>
                            </div>
                            <div class="transaction-amount">$400</div>
                        </div>
                        <div class="transaction-item">
                            <div class="transaction-icon red">
                                <i class="fas fa-shopping-basket"></i>
                            </div>
                            <div class="transaction-details">
                                <div class="transaction-name">Groceries</div>
                                <div class="transaction-date">September 14th</div>
                            </div>
                            <div class="transaction-amount">$200</div>
                        </div>
                        <div class="transaction-item">
                            <div class="transaction-icon orange">
                                <i class="fas fa-ellipsis-h"></i>
                            </div>
                            <div class="transaction-details">
                                <div class="transaction-name">Others</div>
                                <div class="transaction-date">September 14th</div>
                            </div>
                            <div class="transaction-amount">$20</div>
                        </div>
                        <div class="transaction-item">
                            <div class="transaction-icon orange">
                                <i class="fas fa-ellipsis-h"></i>
                            </div>
                            <div class="transaction-details">
                                <div class="transaction-name">Others</div>
                                <div class="transaction-date">September 14th</div>
                            </div>
                            <div class="transaction-amount">$15</div>
                        </div>
                    </div>
                </div>

                <!-- Savings Transactions -->
                <div class="middle-card">
                    <h3>Savings Transactions</h3>
                    <div class="savings-amount">550,00</div>
                    <div class="time-period-selector">
                        <span>Day</span>
                        <span>Week</span>
                        <span class="active">Month</span>
                        <span>Year</span>
                    </div>
                    <div class="savings-chart">
                        <canvas id="savingsChart"></canvas>
                    </div>
                </div>

                <!-- Attendance Overview -->
                <div class="middle-card">
                    <div class="attendance-header">
                        <h3>Attendance Overview</h3>
                        <select>
                            <option>This Week</option>
                            <option>Last Week</option>
                            <option>This Month</option>
                        </select>
                    </div>
                    <div class="attendance-chart">
                        <canvas id="attendanceChart"></canvas>
                        <div class="attendance-center">
                            <h2>120</h2>
                            <p>Total Attendance</p>
                        </div>
                    </div>
                    <div class="status-list">
                        <h4>Status</h4>
                        <div class="status-item">
                            <span class="status-label">Average</span>
                            <span class="status-percent">75%</span>
                        </div>
                        <div class="status-item">
                            <span class="status-label yellow">Higher</span>
                            <span class="status-percent">15%</span>
                        </div>
                        <div class="status-item">
                            <span class="status-label purple">Lower</span>
                            <span class="status-percent">10%</span>
                        </div>
                        <div class="status-item">
                            <span class="status-label green">Others</span>
                            <span class="status-percent">10%</span>
                        </div>
                    </div>
                    <button class="view-details-btn">View Details</button>
                </div>
            </div>

            <!-- Bottom Section -->
            <div class="bottom-section">
                <div class="bottom-header">
                    <div class="tabs">
                        <span class="tab active">Summary</span>
                        <span class="tab">Transactions</span>
                    </div>
                    <div class="period-selector">
                        <span>Last 7 Days</span>
                        <i class="fas fa-chevron-down"></i>
                    </div>
                </div>
                <div class="bar-chart-container">
                    <canvas id="transactionsBarChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                // Savings Chart
                const savingsCtx = document.getElementById('savingsChart').getContext('2d');
                const savingsChart = new Chart(savingsCtx, {
                    type: 'line',
                    data: {
                        labels: ['Mar 5', 'Mar 10', 'Mar 15', 'Mar 20', 'Mar 25', 'Mar 30'],
                        datasets: [{
                            data: [300, 400, 350, 450, 300, 550],
                            backgroundColor: 'rgba(75, 192, 192, 0.2)',
                            borderColor: '#4CAF50',
                            borderWidth: 2,
                            tension: 0.4,
                            fill: true
                        }]
                    },
                    options: {
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    display: false
                                }
                            },
                            x: {
                                grid: {
                                    display: false
                                }
                            }
                        }
                    }
                });

                // Attendance Chart
                const attendanceCtx = document.getElementById('attendanceChart').getContext('2d');
                const attendanceChart = new Chart(attendanceCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Average', 'Higher', 'Lower', 'Others'],
                        datasets: [{
                            data: [75, 15, 10, 10],
                            backgroundColor: [
                                '#6B7280',
                                '#FFD700',
                                '#9333EA',
                                '#4CAF50'
                            ],
                            borderWidth: 0,
                            cutout: '70%'
                        }]
                    },
                    options: {
                        plugins: {
                            legend: {
                                display: false
                            }
                        }
                    }
                });

                // Transactions Bar Chart
                const barCtx = document.getElementById('transactionsBarChart').getContext('2d');
                const barChart = new Chart(barCtx, {
                    type: 'bar',
                    data: {
                        labels: [
                            'Sept 10', 'Sept 11', 'Sept 12', 'Sept 13', 'Sept 14', 'Sept 15',
                            'Sept 16', 'Sept 17', 'Sept 18', 'Sept 19', 'Sept 20', 'Sept 21', 'Sept 22'
                        ],
                        datasets: [{
                            data: [40, 60, 70, 30, 20, 35, 35, 35, 35, 35, 35, 35, 45],
                            backgroundColor: '#4CAF50',
                            borderRadius: 4,
                            barThickness: 15
                        }]
                    },
                    options: {
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                max: 100,
                                ticks: {
                                    stepSize: 20
                                }
                            }
                        }
                    }
                });
            });
        </script>
    }
</body>
</html>